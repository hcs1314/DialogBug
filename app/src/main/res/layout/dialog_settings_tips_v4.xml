<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#efeff4"
    android:visibility="gone"
    android:orientation="vertical">

    <TextView
        android:id="@+id/settings_tips_v4_tv_level_tips"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text="不要管是什么，我没用"
        android:textColor="#999999"
        android:textSize="14dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/settings_tips_v4_tv_tips_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:layout_below="@id/settings_tips_v4_tv_level_tips"
        android:text="我也用不着"
        android:textColor="#999999"
        android:textSize="14dp"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/settings_tips_v4_rl_remain_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12dp"
        android:layout_below="@id/settings_tips_v4_tv_tips_detail"
        android:visibility="gone">

        <TextView
            android:id="@+id/settings_tips_v4_tv_remain_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#999999"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/settings_tips_v4_tv_remain_time_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/settings_tips_v4_tv_remain_time"
            android:text="0"
            android:textColor="#999999"
            android:textSize="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/settings_tips_v4_tv_remain_time_value"
            android:text=""
            android:textColor="#999999"
            android:textSize="14dp" />

    </RelativeLayout>

</RelativeLayout>